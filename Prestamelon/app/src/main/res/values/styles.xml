<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <!--
        <item name="android:textViewStyle">@style/TextAppearance.Body1</item>
        -->
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Caption</item>
        <item name="textAppearanceListItem">@style/TextAppearance.Subtitle1</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="android:windowBackground">@color/primaryLightColor</item>
        <!--
        <item name="materialButtonStyle">@style/GreenButton</item>
            -->
    <item name="elevation">4dp</item>
    <item name="android:elevation">4dp</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textColor">@color/text_color</item>
    <item name="android:textAppearance">@style/TextAppearance.Button</item>
    <item name="backgroundTint">@color/green_button_color</item>
    <item name="cornerRadius">64dp</item>
    <item name="android:padding">16dp</item>
    </style>

    <style name="OrangeButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textColor">@color/secondaryTextColor</item>
    <item name="android:textAppearance">@style/TextAppearance.Button</item>
    <item name="backgroundTint">@color/secondaryDarkColor</item>
    <item name="cornerRadius">64dp</item>
    <item name="android:padding">16dp</item>
    </style>

    <style name="OrangeCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/secondaryLightColor</item>
        <item name="strokeColor">@color/secondaryColor</item>
        <item name="strokeWidth">8dp</item>
        <item name="cardCornerRadius">160dp</item>
    </style>

    <style name="GreenCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/primaryColor</item>
    </style>

    <style name="GreenCardView.LowRadius" parent="GreenCardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="strokeWidth">8dp</item>
    </style>

    <style name="GreenCardView.HighRadius" parent="GreenCardView">
        <item name="cardCornerRadius">80dp</item>
        <item name="strokeColor">@color/primaryDarkColor</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="MensajeRegistro">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/registro_mensaje_background</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:padding">24dp</item>
        <item name="elevation">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
    </style>

    <style name="OrangePanel">
    <item name="android:background">@drawable/registro_mensaje_background</item>
    <!--<item name="android:padding">32dp</item>-->
    <item name="elevation">8dp</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
    <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorOnPrimary">@color/primaryTextColor</item>
    <item name="android:labelTextSize">60sp</item>
    <item name="android:textSize">60sp</item>
    </style>

    <style name="TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
    <item name="fontFamily">@font/pacifico</item>
    <item name="android:fontFamily">@font/pacifico</item>
    <item name="android:textSize">68sp</item>
    </style>
    <style name="TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
    <item name="fontFamily">@font/pacifico</item>
